        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Pane minHeight="-Infinity" minWidth="-Infinity" prefHeight="416.0" prefWidth="313.0">
            <children>
                <TextField fx:id="txtUsername" layoutX="41.0" layoutY="106.0" prefHeight="38.0" prefWidth="230.0" />
